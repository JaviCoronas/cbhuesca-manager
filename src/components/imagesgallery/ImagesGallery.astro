---
import { imageMetadata } from "astro/assets/utils";
import { getAllGalleries, getAllImages } from "../../pages/api/images";
import { Image } from "astro:assets";

const { folder } = Astro.props;
const images = await getAllImages(folder);
---

<div
  class="flex md:flex-row flex-wrap flex-col md:w-3/4 md:h-viewjustify-center"
>
  {
    images.map((image, index) => (
      <div class="hover:cursor-pointer hover:scale-105 transition duration-500">
        <a
          href={image.data.publicUrl}
          target="_blank"
          class="flex flex-wrap h-96 m-1 w-72"
        >
          <img
            src={image.data.publicUrl}
            alt={`Thumbnail ${index}`}
            height="400"
            width="350"
            loading="lazy"
            decoding="async"
            class="h-full w-full object-cover"
          />
        </a>
      </div>
    ))
  }
</div>
