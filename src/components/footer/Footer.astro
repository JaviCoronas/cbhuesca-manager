---
import { Image } from "astro:assets";
import SocialMedia from "../socialmedia/SocialMedia.astro";
import FeedbackForm from "./FeedbackForm";
---

<div class="relative bottom-0 z-1">
  <div class="flex flex-wrap h-96">
    <div class="flex-auto sm:w-1/3 m-3">
      <div class="flex flex-row justify-center items-center m-3">
        <img
          src="/assets/logos/logo-finalb.png"
          alt="Logo"
          class="filter brightness-0"
          width={150}
          height={600}
        />
      </div>
      <div class="flex justify-center items-center">
        <p class="text-xl font-semibold font-sans">CLUB BÁDMINTON HUESCA</p>
      </div>
      <p class="text-center font-sans mt-5">
        Síguenos en redes sociales, interactúa y contáctanos para ser parte del
        Club como jugador, entrenador, simpatizante o colaborador
      </p>
      <div class="flex h-44 justify-center items-center">
        <SocialMedia size="48" />
      </div>
    </div>
    <div class="flex-auto sm:w-1/3 md:m-10">
      <div class="m-3 w-max-96">
        <FeedbackForm client:load />
      </div>
    </div>
    <div class="flex flex-col md:flex-row w-full items-center justify-center">
      <div>
        <img
          src={"/assets/logos/ayuntamiento.png"}
          alt="ayuntamiento"
          height={30}
          width={150}
          class="m-5"
        />
      </div>
      <div>
        <img
          src={"/assets/logos/huesca-magia.png"}
          alt="huesca-magia"
          height={30}
          width={150}
          class="m-5"
        />
      </div>
    </div>
    <div class="flex flex-auto justify-center items-cente">
      <small class="text-sm text-center"
        >Página Web creada por Club Bádminton Huesca © 2023 – 2024</small
      >
      <a class="font-sans text-sm pl-5" href="/privacy-politics">
        Política y Privacidad
      </a>
      <a class="font-sans text-sm pl-5" href="/legal-advice"> Aviso Legal </a>
    </div>
  </div>
</div>
