---
import { Image } from "astro:assets";
import SocialMedia from "../../components/socialmedia/SocialMedia.astro";
---

<nav class="flex items-center justify-between flex-wrap bg-white p-2 md:w-5/6">
  <div class="flex items-center flex-shrink-0 text-white mr-6">
    <a href="/">
      <img
        src="/assets/logos/logo-finalb.png"
        class={"filter brightness-0"}
        alt="Logo del club"
        width={150}
        height={40}
      />
    </a>
    <span class="font-semibold text-xl tracking-tight"></span>
  </div>
  <div class="block lg:hidden">
    <button
      id="hamburgerBtn"
      class="flex items-center px-3 py-2 border rounded text-black border-black hover:text-grey hover:border-grey"
    >
      <svg
        class="fill-current h-3 w-3"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><title>Menu</title><path
          d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path></svg
      >
    </button>
  </div>
  <div
    id="navLinks"
    class="w-full justify-center items-center lg:flex lg:items-center lg:w-auto hidden md:hidden"
  >
    <div class="text-sm lg:flex-grow">
      <a
        href="/schedule"
        class="block mt-4 lg:inline-block lg:mt-0 text-black text-xl hover:text-gray-400 mr-4"
      >
        Horarios
      </a>
      <a
        href="/calendar"
        class="block mt-4 lg:inline-block lg:mt-0 text-black text-xl hover:text-gray-400 mr-4"
      >
        Calendario
      </a>
      <a
        href="/news"
        class="block mt-4 lg:inline-block lg:mt-0 text-black text-xl hover:text-gray-400 mr-4"
      >
        Noticias
      </a>
      <a
        href="/about"
        class="block font-sans mt-4 lg:inline-block lg:mt-0 text-black text-xl hover:text-gray-400 mr-4"
      >
        El Club
      </a>
      <a
        href="/history"
        class="block mt-4 lg:inline-block lg:mt-0 text-black text-xl hover:text-gray-400 mr-4"
      >
        Historia
      </a>
      <SocialMedia size="24" />
    </div>
  </div>
  <script>
    document.addEventListener("astro:page-load", () => {
      const menuToggle = document.getElementById("hamburgerBtn");
      const navLinks = document.getElementById("navLinks");

      menuToggle.addEventListener("click", () => {
        navLinks.classList.toggle("hidden");
      });
    });
  </script>
</nav>
