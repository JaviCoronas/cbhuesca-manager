---
import GlobalLayout from "../layouts/GlobalLayout.astro";
const pageTitle = "Horarios";

const dias = [
  "Horas",
  "Lunes",
  "Martes",
  "Miércoles",
  "Jueves",
  "Viernes",
  "Sábado",
  "Domingo",
];
---

<GlobalLayout pageTitle={pageTitle}>
  <div
    class="flex flex-col h-30 items-center justify-center bg-cover bg-center"
    style="background-image: url('/assets/aboutHeader.webp');"
  >
    <div class="flex-none">
      <div class="flex flex-col items-center justify-center h-36 md:h-96">
        <h1
          class="text-3xl md:text-5xl lg:text-6xl text-white font-sans font-extrabold text-center mb-4 z-10"
        >
          {pageTitle.toUpperCase()}
        </h1>
        <p class="text-lg text-white text-center z-10 font-sans"></p>
      </div>
    </div>
  </div>
  <table class="divide-gray-200 w-48">
    <thead class="bg-black">
      <tr class="">
        {
          dias.map((dia) => (
            <th
              scope="col"
              class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider"
            >
              {dia}
            </th>
          ))
        }
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <!-- Usa un loop para generar las filas de tu tabla -->
      {/* Cada fila sería un tr aquí */}
      <tr>
        <td
          class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
        >
          07:00
        </td>
        <td
          class="text-sm text-black font-light px-6 py-4 whitespace-nowrap bg-blue-600"
        >
          Cross
        </td>
        <!-- ... -->
        <td
          class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
        >
          <!-- Vacío para celdas sin actividad -->
        </td>
      </tr>
      {/* ... más filas ... */}
    </tbody>
  </table>
</GlobalLayout>
