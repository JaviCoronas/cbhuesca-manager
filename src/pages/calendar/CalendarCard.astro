---
import { type Tournament } from "../../pages/api/tournaments/tournaments";
import { dateToLocalString } from "../../utils/DateUtils";

const { element } = Astro.props;

const getOrg = (org: string) => {
  switch (org) {
    case "FESBA":
      return "./assets/logos/bad_spain2.jpeg";
    case "FARBA":
      return "./assets/logos/bad_farba.jpeg";
    case "CAT":
      return "./assets/logos/bad_cat.jpeg";
    default:
      return "./assets/logos/bad_spain2.jpeg";
  }
};
---

<div
  class="relative flex flex-col h-64 animate-zoom cursor-pointer shadow-xl rounded-xl bg-white mb-2 mt-2 w-64"
>
  <div class="absolute top-0 left-0 w-full h-1/2 overflow-hidden rounded-xl">
    <img
      class="w-2/3 h-full object-scale-down p-2"
      src={getOrg(element.org)}
      alt={`Thumbnail image`}
    />
  </div>
  <div class="absolute top-0 right-0">
    <div class="m-1">
      <svg
        width="48px"
        height="48px"
        viewBox="-4.08 -4.08 32.16 32.16"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        stroke="#ffffff"
        stroke-width="0.00024000000000000003"
        ><g id="SVGRepo_bgCarrier" stroke-width="0"
          ><rect
            x="-4.08"
            y="-4.08"
            width="32.16"
            height="32.16"
            rx="16.08"
            fill="#000000"></rect></g
        ><g
          id="SVGRepo_tracerCarrier"
          stroke-linecap="round"
          stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"
          ><path
            fill-rule="evenodd"
            clip-rule="evenodd"
